<Window x:Class="_034_Language.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_034_Language"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="400">
  <Grid Background="LightSteelBlue">
    <StackPanel Margin="30" Background="AliceBlue">
      <TextBlock HorizontalAlignment="Center" Padding="10">
        ■ 좋아하는 프로그래밍 언어를 선택하세요.</TextBlock>
      <Separator Margin="30 0 30 0"/>
      <CheckBox x:Name="cbC"  Margin="40 7">C</CheckBox>
      <CheckBox x:Name="cbCPP"  Margin="40 7">C++</CheckBox>
      <CheckBox x:Name="cbPython"  Margin="40 7">Python</CheckBox>
      <CheckBox x:Name="cbCS"  Margin="40 7">C#</CheckBox>
      <CheckBox x:Name="cbJava" Margin="40 7">Java</CheckBox>
      <Separator Margin="30 0 30 0"/>
      <StackPanel Orientation="Horizontal" 
                  HorizontalAlignment="Center">
        <Button x:Name="btnSubmit" Width="80" Height="25" 
                Margin="10" Click="btnSubmit_Click">투표하기</Button>
        <Button x:Name="btnExit" Width="80" Height="25" 
                Margin="10" Click="btnExit_Click">끝내기</Button>
      </StackPanel>
    </StackPanel>

  </Grid>
</Window>
