<Window x:Class="_033_stackPanel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_033_stackPanel"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="400">
  <Grid Background="LightSteelBlue">
    <StackPanel Margin="30" Background="AliceBlue">
      <!-- 1층 -->
      <TextBlock HorizontalAlignment="Center" Padding="20"
                 FontSize="20">로그인</TextBlock>
      <!-- 2층 -->
      <StackPanel Orientation="Horizontal" Margin="0 10 20 10">
        <TextBlock FontSize="18" Width="100" Padding="10"
                   TextAlignment="Right">Id:</TextBlock>
        <TextBox x:Name="txtName" FontSize="18" Width="200"></TextBox>
      </StackPanel>
      <!-- 3층 -->
      <StackPanel Orientation="Horizontal" Margin="0 10 20 10">
        <TextBlock FontSize="18" Width="100" Padding="10"
                   TextAlignment="Right">Password:</TextBlock>
        <PasswordBox x:Name="txtPassword" FontSize="18" Width="200"></PasswordBox>
      </StackPanel>
      <!-- 4층 -->
      <StackPanel Orientation="Horizontal" Margin="0 10 20 10">
        <TextBlock FontSize="18" Width="100" Padding="10"
                   TextAlignment="Right"></TextBlock>
        <Button FontSize="18" Width="200" Click="Button_Click">Login</Button>
      </StackPanel>
    </StackPanel>
  </Grid>
</Window>
