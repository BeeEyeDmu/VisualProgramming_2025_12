<Window x:Class="_037_MultiColorButton.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_037_MultiColorButton"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="400"  
        MinWidth="380" MinHeight="150">
  <Grid Background="Orange">
    <Button Margin="30" FontSize="30" FontWeight="Bold">
      <WrapPanel>
        <TextBlock Foreground="Blue" Text="Multi"/>
        <TextBlock Foreground="Red" Text="Color"/>
        <TextBlock Text="Button"/>
      </WrapPanel>
    </Button>
  </Grid>
</Window>
